<section id="how-to-use" class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-white to-blue-50">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        How to Use Our <span class="gradient-text">Twitter Video Downloader</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Download Twitter content online in four simple steps. Save twitter content easily with our tool.
      </p>
    </div>

    <!-- Steps -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Step 1 -->
      <div class="relative">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">
            1
          </div>
          <h3 class="text-xl font-bold mb-3">Find the Tweet</h3>
          <p class="text-gray-600">
            Open Twitter/X and find the tweet containing the video, GIF, or images you want to download.
          </p>
        </div>
        <div class="hidden lg:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
          <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
            <path d="M10 17l5-5-5-5v10z"/>
          </svg>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="relative">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">
            2
          </div>
          <h3 class="text-xl font-bold mb-3">Copy the URL</h3>
          <p class="text-gray-600">
            Click the share button on the tweet and select "Copy link" to copy the tweet URL to your clipboard.
          </p>
        </div>
        <div class="hidden lg:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
          <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
            <path d="M10 17l5-5-5-5v10z"/>
          </svg>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="relative">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">
            3
          </div>
          <h3 class="text-xl font-bold mb-3">Paste & Click</h3>
          <p class="text-gray-600">
            Paste the URL into our input field at the top of the page and click the Download button.
          </p>
        </div>
        <div class="hidden lg:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
          <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
            <path d="M10 17l5-5-5-5v10z"/>
          </svg>
        </div>
      </div>

      <!-- Step 4 -->
      <div class="relative">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">
            4
          </div>
          <h3 class="text-xl font-bold mb-3">Download</h3>
          <p class="text-gray-600">
            Choose your preferred quality and format, then click the download button to save the file.
          </p>
        </div>
      </div>
    </div>

    <!-- Visual Demo -->
    <div class="mt-16 max-w-4xl mx-auto">
      <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl p-8 shadow-2xl">
        <div class="flex items-center gap-2 mb-6">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
          <span class="ml-4 text-gray-400 text-sm">twitterdown.com</span>
        </div>
        <div class="bg-white rounded-lg p-6 text-center">
          <input
            type="text"
            value="https://twitter.com/user/status/123456789"
            disabled
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-gray-600 mb-4"
          />
          <button
            disabled
            class="w-full px-6 py-3 bg-primary text-white rounded-lg font-semibold opacity-80"
          >
            Download
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
