<section id="home" class="pt-24 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-blue-50 to-white">
  <!-- Badge -->
  <div class="max-w-4xl mx-auto mb-8 animate-fade-in">
    <div class="inline-flex items-center px-4 py-2 bg-green-100 text-green-700 rounded-full text-sm font-medium">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      ðŸŽ‰ TwitterDown is now completely free!
    </div>
  </div>

  <div class="max-w-4xl mx-auto text-center">
    <!-- Main Heading -->
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold mb-6 animate-slide-up">
      Download Twitter Videos Online in Seconds
      <span class="gradient-text block mt-2">Free Twitter Video Downloader</span>
    </h1>

    <!-- Description -->
    <p class="text-lg sm:text-xl text-muted-foreground mb-10 max-w-3xl mx-auto animate-fade-in" style="animation-delay: 0.2s;">
      TwitterDown is the fastest online twitter video downloader to download twitter videos online and save twitter content easily.
      Copy the tweet URL, paste it in our twitter video downloader input field, and download videos from twitter in high quality MP4 format.
    </p>

    <!-- Download Box -->
    <div class="max-w-2xl mx-auto mb-8 animate-slide-up" style="animation-delay: 0.3s;">
      <div class="bg-card rounded-2xl shadow-2xl p-6 sm:p-8 border border-border">
        <p class="text-sm text-muted-foreground mb-3">Enter any Twitter/X video URL to download in high quality for free, all resolutions supported</p>

        <div class="flex flex-col sm:flex-row gap-3">
          <input
            id="url-input"
            type="text"
            placeholder="Paste Twitter URL here..."
            class="flex-1 px-4 py-4 border-2 border-input rounded-xl focus:border-ring focus:ring-2 focus:ring-ring/20 outline-none transition-all text-lg"
          />
          <button
            id="download-btn"
            class="px-8 py-4 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center gap-2 text-lg"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            Download
          </button>
        </div>

        <!-- Quick Access Buttons -->
        <div class="flex flex-wrap items-center justify-center gap-4 mt-6">
          <a href="https://chrome.google.com/webstore" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 bg-muted hover:bg-accent rounded-lg transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            Chrome Extension
          </a>
          <a href="https://www.icloud.com/shortcuts" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 bg-muted hover:bg-accent rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            iOS Shortcuts
          </a>
        </div>
      </div>

      <!-- Result Area (Hidden by default) -->
      <div id="result-area" class="hidden mt-6 bg-card rounded-2xl shadow-lg p-6 border border-border">
        <div class="flex items-start gap-4">
          <div class="w-20 h-20 bg-muted rounded-lg flex-shrink-0 flex items-center justify-center">
            <svg class="w-10 h-10 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="font-semibold text-lg mb-2">Twitter Video</h3>
            <p class="text-sm text-muted-foreground mb-4">High Quality MP4 â€¢ 1080p</p>
            <div class="flex flex-wrap gap-2">
              <button class="px-4 py-2 bg-primary text-primary-foreground hover:bg-primary/90 rounded-lg transition-colors flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Download MP4
              </button>
              <button class="px-4 py-2 bg-muted text-foreground rounded-lg hover:bg-accent transition-colors">
                Download GIF
              </button>
              <button class="px-4 py-2 bg-muted text-foreground rounded-lg hover:bg-accent transition-colors">
                Download Images
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="mt-12 animate-fade-in" style="animation-delay: 0.4s;">
      <div class="relative max-w-3xl mx-auto">
        <div class="absolute inset-0 bg-gradient-to-r from-primary to-purple-600 rounded-2xl blur-2xl opacity-20 transform scale-105"></div>
        <div class="relative bg-gradient-to-br from-muted to-muted rounded-2xl p-8 border border-border">
          <div class="aspect-video bg-card rounded-xl shadow-inner flex items-center justify-center">
            <div class="text-center">
              <svg class="w-24 h-24 text-muted-foreground/50 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-muted-foreground font-medium">Twitter Video Preview</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const urlInput = document.getElementById('url-input');
  const downloadBtn = document.getElementById('download-btn');
  const resultArea = document.getElementById('result-area');

  downloadBtn?.addEventListener('click', () => {
    const url = urlInput?.value.trim();
    if (url) {
      // Show loading state
      downloadBtn.innerHTML = `
        <svg class="w-6 h-6 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Processing...
      `;
      downloadBtn.disabled = true;

      // Simulate processing (replace with actual API call)
      setTimeout(() => {
        downloadBtn.innerHTML = `
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          Download
        `;
        downloadBtn.disabled = false;
        resultArea?.classList.remove('hidden');
      }, 1500);
    }
  });

  // Allow Enter key to trigger download
  urlInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      downloadBtn?.click();
    }
  });
</script>
