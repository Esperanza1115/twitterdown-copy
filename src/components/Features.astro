<section id="features" class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Why Choose <span class="gradient-text">TwitterDown</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        The Best Twitter Video Downloader Online with features designed for both casual users and professionals.
      </p>
    </div>

    <!-- Main Features Grid -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <!-- Feature 1: Simple & Fast -->
      <div class="group p-8 rounded-2xl bg-gradient-to-b from-blue-50 to-white border border-blue-100 hover:shadow-xl transition-all duration-300">
        <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Simple & Fast</h3>
        <p class="text-gray-600">
          Just copy the tweet URL, paste it in our twitter video downloader input field and download Twitter content online in seconds. No complicated steps required.
        </p>
      </div>

      <!-- Feature 2: High Quality Downloads -->
      <div class="group p-8 rounded-2xl bg-gradient-to-b from-purple-50 to-white border border-purple-100 hover:shadow-xl transition-all duration-300">
        <div class="w-14 h-14 bg-purple-100 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">High Quality Downloads</h3>
        <p class="text-gray-600">
          Get the highest quality version of any Twitter content, converting twitter to mp4 while maintaining the original resolution.
        </p>
      </div>

      <!-- Feature 3: No Login Required -->
      <div class="group p-8 rounded-2xl bg-gradient-to-b from-green-50 to-white border border-green-100 hover:shadow-xl transition-all duration-300">
        <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">No Login Required</h3>
        <p class="text-gray-600">
          Use our tweet downloader without creating an account or sharing your Twitter credentials. Start twitter downloads instantly.
        </p>
      </div>
    </div>

    <!-- Key Features Section -->
    <div class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 sm:p-12 border border-gray-200">
      <h3 class="text-2xl sm:text-3xl font-bold text-center mb-12">
        Key Features of Our Twitter Video Downloader
      </h3>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Fast Parsing -->
        <div class="flex items-start gap-4 p-4">
          <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold mb-1">Fast Parsing</h4>
            <p class="text-sm text-gray-600">Get download links within seconds</p>
          </div>
        </div>

        <!-- Quality Selection -->
        <div class="flex items-start gap-4 p-4">
          <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold mb-1">Quality Selection</h4>
            <p class="text-sm text-gray-600">From standard to HD, 4K supported</p>
          </div>
        </div>

        <!-- High-Speed Downloads -->
        <div class="flex items-start gap-4 p-4">
          <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold mb-1">High-Speed Downloads</h4>
            <p class="text-sm text-gray-600">Optimized servers for fastest speeds</p>
          </div>
        </div>

        <!-- Twitter MP4 Downloader -->
        <div class="flex items-start gap-4 p-4">
          <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold mb-1">MP4 Format</h4>
            <p class="text-sm text-gray-600">Compatible with all devices</p>
          </div>
        </div>

        <!-- Batch Downloads -->
        <div class="flex items-start gap-4 p-4">
          <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
